- if message.user.id == current_user.id
  .main__messages__CurrentUser{data: {message: {id: message.id}}}
    .upper-message
      .upper-message__user-name
        = message.user.name
      .upper-message__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .lower-message
      - if message.content.present?
        %p.lower-message__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?

- else
  .main__messages__OtherUser{data: {message: {id: message.id}}}
    .upper-message
      .upper-message__user-name
        = message.user.name
      .upper-message__date
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .lower-message
      - if message.content.present?
        %p.lower-message__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?